{
  "name": "@hospitalrun-org/frontend",
  "version": "0.1.0",
  "description": "React frontend for HospitalRun",
  "private": false,
  "license": "MIT",
  "dependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-scripts": "3.1.1",
    "typescript": "3.6.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:HospitalRun/hospitalrun-frontend"
  },
  "author": "Jack Meyer",
  "contributors": [
    "Maksim Sinik",
    "Michael J Feher",
    "Stefano Casasola"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/core": "^8.1.0",
    "@types/jest": "24.0.18",
    "@types/node": "12.7.4",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "commitlint-config-gitmoji": "^1.0.1",
    "cross-env": "^5.2.1",
    "cz-emoji": "^1.1.2",
    "dateformat": "^3.0.3",
    "husky": "^3.0.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:ci": "cross-env CI=true react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run test:ci"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  }
}
