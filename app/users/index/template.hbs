{{#item-listing paginationProps=paginationProps }}
  {{#if hasRecords}}
    <table class="table">
      <tr class="table-header">
        <th>Username</th>
        <th>{{t 'labels.name'}}</th>
        <th>Email</th>
        <th>Role</th>
        {{#if showActions}}
          <th>{{t 'labels.actions'}}</th>
        {{/if}}
      </tr>
      {{#each model as |user|}}
        <tr {{action 'editItem' user}}>
          <td class="user-display-name">{{user.displayName}}</td>
          <td class="user-name">{{user.name}}</td>
          <td class="user-email">{{user.email}}</td>
          <td class="user-role">{{user.displayRole}}</td>
          {{#if showActions}}
            <td>
              {{#if canAdd}}
                <button class="btn btn-default" {{action 'editItem' user bubbles=false }}>{{t 'labels.edit'}}</button>
              {{/if}}
              {{#if canDelete}}
                <button class="btn btn-default" {{action 'deleteItem' user bubbles=false }}>Delete</button>
              {{/if}}
            </td>
          {{/if}}
        </tr>
      {{/each}}
    </table>
  {{else}}
    <div class="alert alert-info">
      <em>No users found.</em>
      {{#if canAdd}}
        <em>Create a new user?</em> <button class="btn btn-primary" {{action 'newItem'}}>New User</button>
      {{/if}}
    </div>
  {{/if}}
{{/item-listing}}
