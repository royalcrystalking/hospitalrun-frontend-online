{{#if hasRecords}}
    <table class="table">
        <tr class="table-header">
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Roles</th>
            {{#if showActions}}
                <th>Actions</th>
            {{/if}}
        </tr>
        {{#each itemController='users/item-controller'}}
            <tr {{action 'editItem' this}}>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{email}}</td>
                <td>{{displayRole}}</td>
                {{#if parentController.showActions}}
                    <td>
                        {{#if parentController.canAdd}}
                            <button class="btn btn-default" {{action 'editItem' this}}>Edit</button>
                        {{/if}}
                        {{#if parentController.canDelete}}
                            <button class="btn btn-default" {{action 'deleteItem' this}}>Delete</button>
                        {{/if}}
                    </td>
                {{/if}}
            </tr>
        {{/each}}
    </table>
{{else}}
    <div class="alert alert-info">
        <em>No users found.</em>  
        {{#if canAdd}}
            <em>Create a new user?</em> <button class="btn btn-primary" {{action 'newItem'}}>New User</button>
        {{/if}}
    </div>
{{/if}}
