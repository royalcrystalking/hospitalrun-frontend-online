{{#em-form model=this submit_button=false}}
    {{em-input property="patientId" label="Patient"}}
    <div class="form-group">
        <label>Prescription:</label>
        {{smart-prescription value=prescription rows="3" class="form-control"}}
    </div>
    <div class="row">
        {{em-input property="quantity" label="Quantity" class="col-xs-3"}}
    </div>
    <div class="form-group">
        <label>Medication:</label>
        {{ext-radio name=medicationId content=availableMeds value=medicationId}}
    </div>
{{/em-form}}