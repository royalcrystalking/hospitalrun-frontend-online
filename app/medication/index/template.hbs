{{#if model}}
    <table class="table">
        <tr class="table-header">
            <th>Date</th>
            <th>Patient</th>
            <th>Medication</th>
            <th>Quantity</th>
            <th>Status</th>
            {{#if showActions}}
                <th>Actions</th>
            {{/if}}
        </tr>
        {{#with showActions as showActions}}
            {{#each}}
                <tr {{action 'editItem' this}}>
                    <td>{{date-format prescriptionDate}}</td>
                    <td>{{patient.displayName}}</td>
                    <td>{{inventoryItem.name}}</td>
                    <td>{{quantity}}</td>
                    <td>{{status}}</td>
                    {{#if showActions}}
                        <td>
                            <button class="btn btn-default" {{action 'editItem' this bubbles=false }}>Fulfill</button>
                        </td>
                    {{/if}}
                </tr>
            {{/each}}
        {{/with}}
    </table>
{{else}}
    <div class="alert alert-info">
        <p>No items found. {{#if canAdd}}<a href="#" {{action 'newItem'}}>Create a new medication request?</a>{{/if}}</p>
    </div>
{{/if}}
