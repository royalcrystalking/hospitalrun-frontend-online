{{#if model}}
<table class="table">
    <tr>
        <th>Patient</th>
        <th>Prescription</th>
        <th>Medication</th>
        <th>Quantity</th>        
        <th>Status</th>        
        <th>Actions</th>
    </tr>
    {{#each itemController='medication/item-controller'}}    
    <tr>
        {{#if isEditing}}
            <td>{{patientId}}</td>
            <td>{{prescription}}</td>
            <td>{{medicationId}}</td>
            <td>{{input value=quantity}}</td>
            <td>{{status}}</td>
            <td>
                <button {{action 'cancelUpdate'}}>Cancel</button>
                <button {{action 'updateRequest'}}>Update</button>
            </td>
        {{else}}
            <td>{{patientId}}</td>
            <td>{{prescription}}</td>
            <td>{{medicationId}}</td>
            <td>{{quantity}}</td>
            <td>{{status}}</td>
            <td>
                <button {{action 'editRequest'}}>Edit</button>
                <button {{action 'deleteRequest'}}>Delete</button>
            </td>        
        {{/if}}
    </tr>
    {{/each}}
</table>
{{else}}
    <div class="alert alert-info">
        <em>No items found.  Create a new record?</em> <button class="btn btn-primary" {{action 'newMedication'}}>New Request</button>
    </div>
{{/if}}
