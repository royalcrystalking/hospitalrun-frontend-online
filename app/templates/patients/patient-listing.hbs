{{#if this}}
<table class="table">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Gender</th>
        <th>Actions</th>
    </tr>
    {{#each itemController='patients/item-controller'}}
        {{#unless isNew}}
            <tr>
                <td>{{id}}</td>
                <td>{{firstName}}</td>
                <td>{{lastName}}</td>
                <td>{{gender}}</td>
                <td>
                    <button class="btn btn-default" {{action 'editPatient' this}}>Edit</button>
                    <button class="btn btn-default" {{action 'deletePatient'}}>Delete</button>
                </td>        
            </tr>
        {{/unless}}
    {{/each}}
</table>
{{else}}
    <div class="alert alert-info">
        <em>No patients found.  Create a new patient record?</em> <button class="btn btn-primary" {{action 'newPatient'}}>New Patient</button>
    </div>
{{/if}}
