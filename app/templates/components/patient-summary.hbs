<div class="panel panel-success" {{action 'linkToPatient'}}>
    <div class="panel-body">
        <div class="row test-patient-summary">
            <div class="form-group col-sm-3">
                <label class="control-label">{{t 'labels.id'}}</label> {{patient.displayPatientId}}
            </div>
            <div class="form-group col-sm-4">
                <label class="control-label">{{t 'labels.name'}}</label> {{patient.displayName}}
            </div>
            <div class="form-group col-sm-2">
                <label class="control-label">{{t 'labels.sex'}}</label> {{patient.sex}}
            </div>
            <div class="form-group col-sm-3">
                <label class="control-label">{{t 'labels.age'}}</label> {{patient.age}}
            </div>
        </div>
        {{#if havePrimaryDiagnoses}}
            <div class="row">
                <div class="form-group col-sm-12">
                    <label class="control-label">Primary Diagnoses</label>
                    {{#each primaryDiagnoses as |diagnosis|}}
                        {{#unless diagnosis.first}}, {{/unless}}
                        {{diagnosis.description}} (<strong>{{date-format diagnosis.date}}</strong>)
                    {{/each}}
                </div>
            </div>
        {{/if}}
        {{#if haveSecondaryDiagnoses}}
            <div class="row">
                <div class="form-group col-sm-12">
                    <label class="control-label">Secondary Diagnoses</label>
                    {{#each secondaryDiagnoses as |diagnosis|}}
                        {{#unless diagnosis.first}}, {{/unless}}
                        {{diagnosis.description}} (<strong>{{date-format diagnosis.date}}</strong>)
                    {{/each}}
                </div>
            </div>
        {{/if}}
        {{#if haveProcedures}}
            <div class="row">
                <div class="form-group col-sm-12">
                    <label class="control-label">Procedures</label>
                    {{#each patientProcedures as |procedure|}}
                        {{#unless procedure.first}}, {{/unless}}
                        <span {{action 'editProcedure' procedure}}>
                              {{procedure.description}} (<strong>{{date-format procedure.procedureDate}}</strong>)
                        </span>
                    {{/each}}
                </div>
            </div>
        {{/if}}
    </div>
</div>
