{{#unless firstQuantity}}
  <div class="row">
    <div class="col-xs-5">
      <div class="form-group required {{quantityClass}}">
        <label class="control-label">{{t 'components.quantityConv.conversion' name=unitName}}</label>
      </div>
    </div>
  </div>
{{/unless}}
<div class="row">
  <div class="col-xs-3">
    <div class="form-group required {{quantityClass}} test-inv-quantity">
      {{#em-form model=this class=quantityClass submitButton=false as |form|}}
        {{form.input
          property='quantity'
          label=(if firstQuantity (t 'labels.quantity'))
        }}
        <span class="help-block">{{quantityHelp}}</span>
      {{/em-form}}
    </div>
  </div>
  <div class="col-xs-3">
    {{#em-form model=this class=unitClass submitButton=false as |form|}}
      {{form.select
        class='form-input-group test-inv-unit required'
        content=unitListHash
        property='unit'
        prompt=' '
        label=(if firstQuantity (t 'components.quantityConv.unit') '')
      }}
      <span class="help-block">{{unitHelp}}</span>
    {{/em-form}}
  </div>
</div>
