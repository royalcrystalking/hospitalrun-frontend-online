{{#each calculatedLocationPickers as |locationPicker|}}
    <div class="form-group">
        <label class="control-label">{{locationPicker.label}}</label>
        {{location-select
            currentLocation=locationPicker.selectedLocation
            content=locationPicker.subLocationList
            class="form-control"
            optionValuePath="content"
            optionLabelPath="content.locationNameWithQuantity"
            selection=locationPicker.selectedLocation            
        }}    
    </div>
{{/each}}