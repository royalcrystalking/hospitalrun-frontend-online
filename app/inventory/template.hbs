<div class="panel panel-primary">
    <div class="panel-heading">New Inventory</div>    
    {{#form-for controller role="form"}}
        <fieldset>
        <div class="form-group">
            {{label-field id}}
            {{input-field id class="form-control" }}
        </div>
        <div class="form-group">
            {{label-field name}}
            {{input-field name class="form-control" }}
        </div>
        <div class="form-group">
            {{label-field description}}
            {{input-field description as="text" class="form-control" rows="3"}}
        </div>
        <div class="form-group">
            {{label-field quantity}}
            {{input-field quantity class="form-control"}}    
        </div>
        <button {{action 'newInventoryItem'}} class="btn btn-primary">Add</button>    
        </fieldset>
    {{/form-for}}
    
</div>
{{outlet}}

