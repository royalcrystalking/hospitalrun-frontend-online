{{#em-form model=this submit_button=false }}
    <div class="form-group">
        <label class="control-label">Item</label>
        <p class="form-control-static">{{transferItem.name}}</p>        
    </div>
    <div class="form-group">
        <label class="control-label">Transfer From</label>
        <p class="form-control-static">{{fromLocation}}</p>        
    </div>
    <div class="form-group">
        <label class="control-label">Quantity Available</label>
        <p class="form-control-static">{{quantity}}</p>
    </div>
    {{type-ahead property="transferLocation" label="Transfer To Location" content=warehouseList.value selection=transferLocation }}
    {{type-ahead property="transferAisleLocation" label="Transfer To Aisle Location" content=aisleLocationList.value selection=transferAisleLocation }}
    <div class="row">
        {{em-input property="transferQuantity" label="Quantity" class="col-sm-3"}}        
    </div>
{{/em-form}}