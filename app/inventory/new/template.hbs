<div class="panel panel-primary">
    <div class="panel-heading">New Inventory</div>
    <div class="panel-body">
        {{#form-for controller role="form" wrapper="twitter-bootstrap"}}
            {{input name}}
            {{input description as="text"}}
            <div class="form-group">
                <label for="inventoryType">Type</label>
                {{view Ember.Select content=inventoryTypes class="form-control" value=inventoryType id="inventoryType"}}
            </div>

            <div class="row">
                {{input quantity class="col-xs-2"}}
            </div>
            {{input crossReference}}
            {{submit "Add" class="btn btn-primary" value="Add" name="Add" as="button"}}
        {{/form-for}}
    </div>
</div>