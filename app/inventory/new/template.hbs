{{#form-for controller role="form" wrapper="twitter-bootstrap"}}
<div class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">New Item</h4>
            </div>
            <div class="modal-body">

                    {{input name}}
                    {{input description as="text"}}
                    <div class="form-group">
                        <label for="inventoryType">Type</label>
                        {{view Ember.Select content=inventoryTypes class="form-control" value=type id="inventoryType"}}
                    </div>
                    <div class="row">
                        {{input quantity class="col-xs-2"}}
                    </div>
                    <div class="row">
                        {{input price class="col-xs-2"}}
                    </div>        
                    {{input crossReference}}
            </div>
            <div class="modal-footer">
                {{submit "Add" class="btn btn-primary" value="Add" name="Add" as="button"}}
            </div>
        </div>
    </div>
</div>
{{/form-for}}