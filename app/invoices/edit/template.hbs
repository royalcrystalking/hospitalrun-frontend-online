{{#edit-panel editPanelProps=editPanelProps}}
  {{#em-form model=this submit_button=false }}
    {{#unless isNew}}
      {{patient-summary patient=patient returnTo='invoices.edit' returnToContext=id disablePatientLink=isNew }}
    {{/unless}}
    <div class="row">
      {{#unless isNew}}
        <div class="form-group col-xs-2">
          <label>Invoice Id</label>
          <p class="form-control-static">{{id}}</p>
        </div>
      {{/unless}}
      {{date-picker property="billDate" label="Bill Date" class="col-xs-2"}}
      {{#if isNew}}
        {{patient-typeahead property="patientTypeAhead" label="Patient" content=patientList selection=selectedPatient class="col-xs-4 required"}}
        {{em-select class="col-xs-4 required" label="Visit"
            property="visit" content=patientVisitsForSelect
            optionValuePath="selectObject" optionLabelPath="selectObject.visitDescription"
            selected=visit
            prompt='Please select a visit'
        }}
      {{else}}
        <div class="form-group col-xs-3">
          <label>Visit</label>
          <p class="form-control-static">{{visit.visitDescription}}</p>
        </div>
      {{/if}}
    </div>
    <div class="row">
      {{em-input property="externalInvoiceNumber" label="External Invoice #" class="col-xs-3"}}
      {{em-select label="Payment Profile"
        property="paymentProfile"
        content=pricingProfiles
        optionValuePath="selectObject"
        optionLabelPath="selectObject.name"
        class="col-xs-3"
        prompt=" "
        selected=paymentProfile
      }}
    </div>
  {{/em-form}}
  <form class="form-inline">
    <div class="panel detail-section">
      <div class="panel-heading">
        <h3 class="panel-title">
          Line Items
          {{#if canAddCharge}}
            <button class="btn btn-primary align-right" {{action "showAddLineItem" bubbles=false }}><span class="octicon octicon-plus"></span>Add Line Item</button>
          {{/if}}
        </h3>
      </div>
      <div class="panel-body detail-section-content">
        <table class="table">
          <tr class="table-header">
            <th>Description</th>
            <th class="text-right">Actual Charges</th>
            <th class="text-right">Discount</th>
            <th class="text-right">PhilHealth</th>
            <th class="text-right">HMO/COM</th>
            <th class="text-right">Excess</th>
            <th class="text-right">Action</th>
          </tr>
          {{#each lineItemsByCategory as |categoryGroup|}}
            <tr>
              <td class="col-xs-12">
                <strong>{{categoryGroup.category}}</strong>
              </td>
            </tr>
            {{#each categoryGroup.items as |item|}}
              <tr>
                <td class="col-xs-5">
                  <div class="form-group">
                    <div class="input-group">
                      <span class="input-group-addon glyphicon {{unless showDetails 'glyphicon-minus' 'glyphicon-plus'}}"
                        {{action "toggleDetails" item bubbles=false }}> </span>
                      <strong>{{input class="form-control" value=item.name }}</strong>
                    </div>
                  </div>
                </td>
                <td class="col-xs-1 text-right">
                  {{number-format item.total}}
                </td>
                <td class="col-xs-1">
                  <div class="form-group">
                    {{input class="form-control text-right" value=item.discount }}
                  </div>
                </td>
                <td class="col-xs-1">
                  <div class="form-group">
                    {{input class="form-control text-right" value=item.nationalInsurance }}
                  </div>
                </td>
                <td class="col-xs-1">
                  <div class="form-group">
                    {{input class="form-control text-right" value=item.privateInsurance }}
                  </div>
                </td>
                <td class="col-xs-1 text-right">{{number-format item.amountOwed}}</td>
                <td class="col-xs-2">
                  {{#if canAddCharge}}
                    <button class="btn btn-default warning" {{action "showDeleteLineItem" item bubbles=false }}>
                      <span class="octicon octicon-x"></span>Delete
                    </button>
                  {{/if}}
                </td>
              </tr>
              {{#if item.showDetails}}
                <tr>
                  <th colspan="2">Name</th>
                  <th>Quantity</th>
                  <th>Price</th>
                  <th>Expense To</th>
                  <th class="col-xs-1 text-right">Total</th>
                  <th>
                    {{#if canAddCharge}}
                      <button class="btn btn-primary" {{action "addItemCharge" item}}>
                        <span class="octicon octicon-plus"></span>Add Charge
                      </button>
                    {{/if}}
                  </th>
                </tr>
                {{#each item.details as |detail|}}
                  <tr>
                    <td colspan="2" class="col-xs-6">
                      <div class="form-group">
                        <div class="input-group">
                          {{input class="form-control" value=detail.name }}
                        </div>
                      </div>
                    </td>
                    <td class="col-xs-1">
                      <div class="form-group">
                        {{input class="form-control" value=detail.quantity }}
                      </div>
                    </td>
                    <td class="col-xs-1">
                      <div class="form-group">
                        {{input class="form-control" value=detail.price }}
                      </div>
                    </td>
                    <td class="col-xs-1">
                      <div class="form-group">
                        {{select-list
                          class='form-control'
                          content=expenseAccountList
                          value=detail.expenseAccount
                          action=(action (mut detail.expenseAccount))
                        }}
                      </div>
                    </td>
                    <td class="col-xs-1 text-right">
                      {{number-format detail.amountOwed}}
                    </td>
                    <td class="col-xs-2">
                      {{#if canAddCharge}}
                        <button class="btn btn-default warning" {{action "showDeleteItem" detail item.details bubbles=false }}>
                          <span class="octicon octicon-x"></span>Delete
                        </button>
                      {{/if}}
                    </td>
                  </tr>
                {{/each}}
              {{/if}}
            {{/each}}
            <tr>
              <td>
                <strong>Total {{categoryGroup.category}}</strong>
              </td>
              <td class="text-right">{{number-format categoryGroup.total}}</td>
              <td class="text-right">{{number-format categoryGroup.discount}}</td>
              <td class="text-right">{{number-format categoryGroup.nationalInsurance}}</td>
              <td class="text-right">{{number-format categoryGroup.privateInsurance}}</td>
              <td class="text-right">{{number-format categoryGroup.amountOwed }}</td>
              <td></td>
            </tr>
          {{/each}}
          <tr>
            <td>
              <strong>Total</strong>
            </td>
            <td class="text-right">{{number-format model.total}}</td>
            <td class="text-right">{{number-format model.discount}}</td>
            <td class="text-right">{{number-format model.nationalInsurance}}</td>
            <td class="text-right">{{number-format model.privateInsurance}}</td>
            <td class="text-right">{{number-format model.patientResponsibility}}</td>
            <td></td>
          </tr>
          <tr>
            <td>
              <strong>Payments/Deposits</strong>
            </td>
            <td colspan="4"></td>
            <td class="text-right">-{{number-format paidTotal}}</td>
            <td></td>
          </tr>
          <tr>
            <td>
              <strong>Grand Total</strong>
            </td>
            <td colspan="4"></td>
            <td class="text-right">{{number-format remainingBalance}}</td>
            <td></td>
          </tr>
        </table>
      </div>
    </div>
  </form>
  <div class="panel detail-section">
    <div class="panel-heading">
      <h3 class="panel-title">
        Remarks
      </h3>
    </div>
    <div class="panel-body detail-section-content">
      {{textarea class="form-control" value=remarks}}
    </div>
  </div>
  <div class="panel detail-section">
    <div class="panel-heading">
      <h3 class="panel-title">
        Payments
        {{#if canAddPayment}}
          <button class="btn btn-primary align-right" {{action "showAddPayment" this bubbles=false }}><span class="octicon octicon-plus"></span>Add Payment</button>
        {{/if}}
      </h3>
    </div>
    <div class="panel-body detail-section-content">
      <table class="table">
        <tr class="table-header">
          <th>Date</th>
          <th>Amount</th>
          <th>Type</th>
          <th>Notes</th>
          <th>Action</th>
        </tr>
        {{#each payments as |payment|}}
          <tr {{action 'showEditPayment' payment}}>
            <td>{{date-format payment.datePaid}}</td>
            <td>{{payment.amount}}</td>
            <td>{{payment.type}}</td>
            <td>{{payment.notes}}</td>
            {{#if canAddPayment}}
            <td>
              <button class="btn btn-default neutral" {{action 'showEditPayment' payment  bubbles=false }}>Edit</button>
              {{#if payment.canRemovePayment}}
                <button class="btn btn-default warning" {{action "showRemovePayment" payment bubbles=false }}>
                  <span class="octicon octicon-x"></span>Remove
                </button>
              {{/if}}
            </td>
            {{/if}}
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
{{/edit-panel}}
