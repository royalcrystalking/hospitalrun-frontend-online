{{#if hasRecords}}
    <table class="table">
        <tr class="table-header">
            <th>Number</th>
            <th>Patient</th>
            <th>Price</th>
            <th>Status</th>
            <th>Create Date</th>
            <th>Actions</th>
        </tr>
        {{#each}}
            {{#unless isNew}}
                <tr {{action 'editItem' this}}>
                    <td>{{invoiceNumber}} [{{invoiceId}}]</td>
                    <td>{{patient.displayName}} [{{patient.displayPatientId}}]<br>{{patient.primaryDiagnosis}}</td>
                    <td>{{discountPrice}} [{{originalPrice}}]</td>
                    <td>{{status}}</td>
                    <td>{{createDate}}</td>
                    <td>
                        <button class="btn btn-default" {{action 'editItem' this bubbles=false }}>Edit</button>
                        <button class="btn btn-default" {{action 'deleteItem' this bubbles=false }}>Delete</button>
                    </td>        
                </tr>
            {{/unless}}
        {{/each}}
    </table>
{{else}}
    <div class="alert alert-info">
        <em>No invoices found.  Create an invoice?</em> <button class="btn btn-primary" {{action 'newItem'}}>New Invoice</button>
    </div>
{{/if}}