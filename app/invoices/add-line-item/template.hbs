{{#modal-dialog
    isUpdateDisabled=isUpdateDisabled
    title=title
    updateButtonAction=updateButtonAction
    updateButtonText=updateButtonText }}
  {{#em-form model=model submitButton=false as |form|}}
    {{form.input property="name" label=(t 'labels.name') class="required"}}
    {{select-or-typeahead form=form model=model property="category" className="required"
      label=(t 'labels.category') list=billingCategories
      selection=model.category
    }}
  {{/em-form}}
{{/modal-dialog}}
