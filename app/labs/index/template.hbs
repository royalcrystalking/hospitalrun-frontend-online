{{#if model}}
    <table class="table">
        <tr class="table-header">
            <th>Date Requested</th>
            <th>Patient</th>
            <th>Lab Type</th>
            <th>Notes</th>
            {{#if canComplete}}
                <th>Actions</th>
            {{/if}}
        </tr>
            {{#with canComplete as canComplete}}
                {{#each}}
                    <tr>
                        <td>{{date-format requestedDate}}</td>
                        <td>{{patient.displayName}}</td>
                        <td>{{labType}}</td>
                        <td>{{notes}}</td>
                        {{#if canComplete}}
                            <td>
                                <button class="btn btn-default" {{action 'completeItem' this}}>Complete</button>
                            </td>
                        {{/if}}
                    </tr>
                {{/each}}
            {{/with}}
    </table>
{{else}}
    <div class="alert alert-info">
        <em>No labs found.</em>
        {{#if canAdd}}
            <em>Create a new record?</em> 
            <button class="btn btn-primary" {{action 'newItem'}}>New Lab</button>
        {{/if}}
    </div>
{{/if}}