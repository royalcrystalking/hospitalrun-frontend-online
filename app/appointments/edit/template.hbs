{{#em-form model=this submit_button=false }}
    {{#if selectPatient}}
        {{patient-typeahead property="patientTypeAhead" label="Patient" content=patientList selection=selectedPatient }}
    {{else}}
            <div class="form-group">
                <label>Patient</label>
                <p class="form-control-static">{{patient.displayName}}</p>
            </div>
    {{/if}}
    <div class="row">
        {{date-picker property="startDate" label="Start Date" showTime=showTime format=dateFormat class="col-sm-4"}}
        {{date-picker property="endDate" label="End Date" showTime=showTime format=dateFormat class="col-sm-4"}}
        {{em-checkbox label="All Day" property="allDay"  class="col-sm-4"}}
    </div>
    <div class="row">
        {{em-select class="col-sm-6" label="Type" 
            property="appointmentType" content=visitTypes
            optionValuePath="content" optionLabelPath="content"
        }}
        {{select-or-typeahead class="col-sm-6" property="provider" 
            label="With" list=physicianList
            selection=provider
        }}
    </div>
    <div class="row">
        {{select-or-typeahead class="col-sm-6" property="location"
            label="Location" list=locationList
            selection=location
        }}
    </div>
    {{em-text label="Notes" property="notes" rows=3 }}    
{{/em-form}}