<tr>
    <td>
        {{appointmentDate}}
    </td>
    <td>{{patient.displayName}}</td>
    <td>{{appointmentType}}</td>
    <td>{{location}}</td>
    <td>{{provider}}</td>
    <td>
        {{#if parentController.canAddVisit}}
            <button class="btn btn-default" {{action 'createVisit' this}}>Add Visit</button>
        {{/if}}
        {{#if parentController.canEdit}}
            <button class="btn btn-default" {{action 'editItem' this}}>Edit</button>
        {{/if}}
        {{#if parentController.canDelete}}
            <button class="btn btn-default" {{action 'deleteItem' this}}>Delete</button>
        {{/if}}
    </td>        
</tr>