{{#if hasRecords}}
    <table class="table">
        <tr class="table-header">
            <th>Start Date</th>
            <th>End Date</th>
            <th>Location</th>
            <th>Patient</th>
            <th>With?</th>
            <th>Actions</th>
        </tr>
        {{#each}}
            <tr>
                <td>{{date-format startDate}}</td>
                <td>{{date-format endDate}}</td>
                <td>{{location}}</td>
                <td>{{patient.displayName}}</td>
                <td>{{provider}}</td>
                <td>
                    <button class="btn btn-default" {{action 'editItem' this}}>Edit</button>
                    <button class="btn btn-default" {{action 'deleteItem' this}}>Delete</button>
                </td>        
            </tr>
        {{/each}}
    </table>
{{else}}
    <div class="alert alert-info">
        <em>No appointments found.  Create a new appointment?</em> <button class="btn btn-primary" {{action 'newItem'}}>New Appointment</button>
    </div>
{{/if}}